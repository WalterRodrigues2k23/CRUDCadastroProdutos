@model CRUDCadastroProdutos.Models.AddProductViewModel
    
@{
}

<h1> Add Product</h1>
<form method="post" action="@Url.Action("Add", "Products")" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Price of Product</label>
        <input type="number" class="form-control" asp-for="Price">
    </div>   
    <div class="mb-3">
        <label for="" class="form-label">Valid Date</label>
        <input type="date" class="form-control" asp-for="ValidDate">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>